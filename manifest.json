{
    "manifest_version": 3,
    "name": "Shop Smart",

    "version": "1.0.0",
    "description": "calculate the score of a product on e-commerce site and makes shopping easy.",

    "icons": {
        "16": "icon16.png",
        "48": "icon16.png",
        "128": "icon16.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon16.png",
            "128": "icon16.png"
        }
    },
    "permissions": ["tabs", "activeTab", "storage", "scripting"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}
